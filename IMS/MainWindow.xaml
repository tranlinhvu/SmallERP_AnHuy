        <TabControl Grid.Row ="1" Name="tabDynamic" Margin="2,15,2,2" Unloaded="tabDynamic_Unloaded" >
            <TabControl.Resources>
                <DataTemplate x:Key="TabHeader" DataType="TabItem" >
                    <DockPanel>
