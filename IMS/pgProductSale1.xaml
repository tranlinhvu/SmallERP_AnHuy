                                <TextBlock Grid.Column="2"  Grid.Row="1" Margin="15,5,0,0" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Visibility="Visible" TextAlignment="Left" FontSize ="18" Text="{Binding Name}"/>
